# Chezmoi
alias cm='chezmoi'
alias cma='eval $(op signin --account my.1password.com) && echo "Patching dotfiles..." && chezmoi apply && source $XDG_CONFIG_HOME/zsh/.zshrc'

# xdg aliases
hash -d config=$XDG_CONFIG_HOME
hash -d cache=$XDG_CACHE_HOME
hash -d data=$XDG_DATA_HOME

# ls
alias ls='eza'
alias ll='ls -alF'
alias la='ls -A'
alias tree="ls -T"

# dev
alias lg='lazygit'
alias cl='clear'

# nvim
alias nv='nvim'

# less
# Add `L` to the end of a command to use less
alias -g L="| less -FRX"

# tmux
# attach to a session if it exists or create a new one
alias tm='tmux a || tmux || tmux ls'

# jrnl
alias jt='jrnl -to today'
alias j0='jrnl -n 1 --edit'

# Obsidian
hash -d vault=~/Documents/Brain
alias notes='cd ~/Documents/Brain && nvim .'

hash -d lkdm=~/Repos/lkdm
hash -d dotfiles=~lkdm/dotfiles
hash -d snippets=~lkdm/snippets
hash -d scripts=~lkdm/scripts
hash -d lab=~lkdm/lab

# Work aliases
hash -d tol=~/Repos/SoftwareNorth/TriOnline
hash -d trunk="$HOME/Repos/SoftwareNorth/TriOnline/trunk"

# Fix dotnet
# alias omnisharp='OmniSharp'

if [[ "$(uname)" == "Darwin" ]]; then
    # Add Homebrew to path
    hash -d icloud=~/Library/Mobile\ Documents/com~apple~CloudDocs/
fi


